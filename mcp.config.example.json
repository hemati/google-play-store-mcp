{
  "mcpServers": {
    "googleplay-mcp": {
      "command": "python",
      "args": [
        "-m",
        "googleplay_mcp.server"
      ],
      "env": {
        "GOOGLE_SERVICE_ACCOUNT_JSON": "./secrets/service_account.json",
        "DEFAULT_TZ": "Europe/Berlin"
      },
      "disabled": false,
      "alwaysAllow": []
    }
  }
}